<p id="notice"><%= notice %></p>

<h1>Logs</h1>

<table>
  <thead>
    <tr>
      <th>Entry</th>
      <th>Systolic</th>
      <th>Diastolic</th>
      <th>Pulse</th>
      <th>Feelings</th>
      <th>Meds</th>
      <th>Actions</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.entry %></td>
        <td><%= log.systolic %></td>
        <td><%= log.diastolic %></td>
        <td><%= log.pulse %></td>
        <td><%= log.feelings %></td>
        <td><%= log.meds %></td>
        <td><%= log.actions %></td>
        <td><%= log.notes %></td>
        <td><%= link_to 'Show', log %></td>
        <td><%= link_to 'Edit', edit_log_path(log) %></td>
        <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Log', new_log_path %>
